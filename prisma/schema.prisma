generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  LAB_ADMIN        // Super admin of the laboratory (creates clinics, lab collaborators)
  LAB_COLLABORATOR // Lab employee (views orders, read-only)
  CLINIC_ADMIN     // Clinic administrator (manages doctors/assistants, views all clinic orders)
  DOCTOR           // Doctor (creates and views own orders)
  CLINIC_ASSISTANT // Clinic assistant (creates orders for assigned doctors)
}

enum OrderStatus {
  DRAFT
  MATERIALS_SENT
  NEEDS_INFO
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum ScanType {
  DIGITAL_SCAN
  ANALOG_MOLD
}

enum AlertStatus {
  UNREAD
  READ
  RESOLVED
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
  LOGIN
  LOGOUT
  REGISTER
  FILE_UPLOAD
  FILE_DOWNLOAD
  FILE_DELETE
  STATUS_CHANGE
  ALERT_SENT
  ALERT_READ
}

// ============================================
// NEW MULTI-TENANT MODELS
// ============================================

model Laboratory {
  id          String   @id @default(cuid())
  name        String

  // Contact info
  email       String?
  phone       String?
  address     String?

  // Platform subscription
  isActive    Boolean  @default(true)

  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  clinics     Clinic[]
  labAdmins   User[]   @relation("LaboratoryAdmins")
  labCollaborators User[] @relation("LaboratoryCollaborators")

  @@index([isActive])
}

model Clinic {
  id            String   @id @default(cuid())
  name          String

  // Contact info
  email         String?
  phone         String?
  address       String?

  // Status
  isActive      Boolean  @default(true)

  // Laboratory relationship
  laboratoryId  String
  laboratory    Laboratory @relation(fields: [laboratoryId], references: [id], onDelete: Cascade)

  // Timestamps
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  clinicAdmins  User[]   @relation("ClinicAdmins")
  doctors       User[]   @relation("ClinicDoctors")
  assistants    User[]   @relation("ClinicAssistants")
  orders        Order[]

  @@index([laboratoryId])
  @@index([isActive])
}

model DoctorAssistant {
  id          String   @id @default(cuid())

  // Relations
  doctorId    String
  doctor      User     @relation("DoctorAssignments", fields: [doctorId], references: [id], onDelete: Cascade)

  assistantId String
  assistant   User     @relation("AssistantAssignments", fields: [assistantId], references: [id], onDelete: Cascade)

  // Timestamps
  createdAt   DateTime @default(now())

  @@unique([doctorId, assistantId])
  @@index([doctorId])
  @@index([assistantId])
}

// ============================================
// UPDATED USER MODEL
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  passwordHash  String
  role          Role

  // Organization relationships (nullable for flexibility)
  laboratoryId  String?   // For LAB_ADMIN and LAB_COLLABORATOR
  laboratory    Laboratory? @relation("LaboratoryAdmins", fields: [laboratoryId], references: [id], onDelete: Cascade)

  labCollaboratorId String? // For LAB_COLLABORATOR (separate relation)
  labCollaborator   Laboratory? @relation("LaboratoryCollaborators", fields: [labCollaboratorId], references: [id], onDelete: Cascade)

  clinicId      String?   // For CLINIC_ADMIN, DOCTOR, and CLINIC_ASSISTANT
  clinic        Clinic?   @relation("ClinicAdmins", fields: [clinicId], references: [id], onDelete: Cascade)

  doctorClinicId String?  // For DOCTOR (separate relation)
  doctorClinic   Clinic?  @relation("ClinicDoctors", fields: [doctorClinicId], references: [id], onDelete: Cascade)

  assistantClinicId String? // For CLINIC_ASSISTANT (separate relation)
  assistantClinic   Clinic? @relation("ClinicAssistants", fields: [assistantClinicId], references: [id], onDelete: Cascade)

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  ordersCreated Order[]   @relation("CreatorOrders")
  ordersByDoctor Order[]  @relation("DoctorOrders")
  alertsSent    Alert[]   @relation("AlertSender")
  alertsReceived Alert[]  @relation("AlertReceiver")
  filesUploaded File[]
  auditLogs     AuditLog[]

  // Doctor-Assistant relationships
  assignedDoctors    DoctorAssistant[] @relation("AssistantAssignments")
  assignedAssistants DoctorAssistant[] @relation("DoctorAssignments")

  @@index([email])
  @@index([role])
  @@index([laboratoryId])
  @@index([clinicId])
  @@index([doctorClinicId])
  @@index([assistantClinicId])
}

model Order {
  id              String       @id @default(cuid())
  orderNumber     String       @unique @default(cuid())

  // Patient information
  patientName     String
  patientId       String?

  // Order details
  description     String?
  notes           String?

  // Dental-specific fields
  teethNumbers    String?
  material        String?
  materialBrand   String?
  color           String?
  scanType        ScanType?

  status          OrderStatus  @default(DRAFT)

  // Organization relationships
  clinicId        String
  clinic          Clinic       @relation(fields: [clinicId], references: [id], onDelete: Cascade)

  // User relationships
  createdById     String       // Who created the order (DOCTOR, CLINIC_ASSISTANT, or CLINIC_ADMIN)
  createdBy       User         @relation("CreatorOrders", fields: [createdById], references: [id], onDelete: Cascade)

  doctorId        String       // The doctor this order belongs to
  doctor          User         @relation("DoctorOrders", fields: [doctorId], references: [id], onDelete: Cascade)

  // Timestamps
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  materialsSentAt DateTime?
  completedAt     DateTime?

  // Relations
  files           File[]
  alerts          Alert[]
  auditLogs       AuditLog[]

  @@index([clinicId])
  @@index([createdById])
  @@index([doctorId])
  @@index([status])
  @@index([createdAt])
  @@index([orderNumber])
}

model File {
  id              String    @id @default(cuid())

  // File metadata
  fileName        String
  originalName    String
  fileType        String
  fileSize        Int
  mimeType        String

  // Storage info
  storageKey      String    @unique
  storageUrl      String

  // Relations
  orderId         String
  order           Order     @relation(fields: [orderId], references: [id], onDelete: Cascade)

  uploadedById    String
  uploadedBy      User      @relation(fields: [uploadedById], references: [id])

  // Timestamps
  createdAt       DateTime  @default(now())
  expiresAt       DateTime?
  deletedAt       DateTime?

  auditLogs       AuditLog[]

  @@index([orderId])
  @@index([uploadedById])
  @@index([createdAt])
  @@index([expiresAt])
  @@index([storageKey])
}

model Alert {
  id              String       @id @default(cuid())

  // Alert content
  message         String       @db.Text
  status          AlertStatus  @default(UNREAD)

  // Relations
  orderId         String
  order           Order        @relation(fields: [orderId], references: [id], onDelete: Cascade)

  senderId        String
  sender          User         @relation("AlertSender", fields: [senderId], references: [id], onDelete: Cascade)

  receiverId      String
  receiver        User         @relation("AlertReceiver", fields: [receiverId], references: [id], onDelete: Cascade)

  // Timestamps
  createdAt       DateTime     @default(now())
  readAt          DateTime?
  resolvedAt      DateTime?

  auditLogs       AuditLog[]

  @@index([orderId])
  @@index([senderId])
  @@index([receiverId])
  @@index([status])
  @@index([createdAt])
}

model AuditLog {
  id              String       @id @default(cuid())

  // Action details
  action          AuditAction
  entityType      String
  entityId        String

  // Change tracking
  oldValue        String?      @db.Text
  newValue        String?      @db.Text
  metadata        Json?

  // User info
  userId          String
  user            User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  // IP and session tracking
  ipAddress       String?
  userAgent       String?

  // Relations (optional, for easier querying)
  orderId         String?
  order           Order?       @relation(fields: [orderId], references: [id], onDelete: Cascade)

  fileId          String?
  file            File?        @relation(fields: [fileId], references: [id], onDelete: Cascade)

  alertId         String?
  alert           Alert?       @relation(fields: [alertId], references: [id], onDelete: Cascade)

  // Timestamp
  createdAt       DateTime     @default(now())

  @@index([userId])
  @@index([action])
  @@index([entityType, entityId])
  @@index([createdAt])
  @@index([orderId])
}
