# Database Configuration
# Opción A: PostgreSQL Local
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/labwiselink"

# Opción B: Neon (recomendado - reemplaza con tu connection string de neon.tech)
# DATABASE_URL="postgresql://usuario:password@host.neon.tech/dbname?sslmode=require"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
# Genera un secret con: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
NEXTAUTH_SECRET="your-secret-here"

# Cloudflare R2 (opcional - puedes dejarlo comentado para desarrollo)
# R2_ACCOUNT_ID="tu-account-id"
# R2_ACCESS_KEY_ID="tu-access-key"
# R2_SECRET_ACCESS_KEY="tu-secret-key"
# R2_BUCKET_NAME="tu-bucket-name"
# R2_PUBLIC_URL="tu-public-url"

# Feature Flags
# Enable the "Create Clinic" button in the user form (true/false)
NEXT_PUBLIC_ENABLE_CREATE_CLINIC_IN_USER_FORM="true"
